<div class="container body-content">
    <div class="well"><h2>All Users</h2>
        <div class="row">
            <table class="table table-striped table-hover ">
                <thead>
                <tr>
                    <th>#ID на потребителите</th>
                    <th>Име</th>
                    <th>Имейл</th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody> {{#each users}}
                    <tr {{#if this.isAdmin }}class="info" {{/if}}>
                        <td>{{ this.id }}</td>
                        <td>{{ this.fullName }}</td>
                        <td>{{ this.email }}</td>
                        <td><a href="/admin/user/edit/{{this.id}}">Редактирай</a> <a href="/admin/user/delete/{{this.id}}">Изтрии</a>
                        </td>
                    </tr> {{/each}} </tbody>
            </table>
        </div>
    </div>
</div>