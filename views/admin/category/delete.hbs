<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" action="/admin/category/delete/{{category.id}}" method="POST">
            <fieldset>
                <legend>Изтрии категория</legend>
                <div class="form-group"><label class="col-sm-4 control-label" for="name">Име на категория</label>
                    <div class="col-sm-4 "><input type="text" class="form-control" id="name" placeholder="Име на категория"
                                                  name="name" value="{{ category.name }}" disabled></div>
                </div>


                <div class="form-group"><label class="col-sm-4 control-label" for="article_tags">Тагове</label>
                    <div class="col-sm-4 "><input type="text" class="form-control" id="article_tags" name="tags"
                                                  value="{{ tagNames }}" disabled></div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4"><a class="btn btn-default" href="/admin/category/all">Отказ</a>
                        <button type="submit" class="btn btn-danger">Изтрии</button>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>